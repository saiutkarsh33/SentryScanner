{
  "manifest_version": 3,
  "name": "Smart Contract Scanner",
  "version": "1.0",
  "description": "Scan Smart Contract Addresses",
  "permissions": ["tabs", "activeTab", "storage", "scripting"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "16x16.png",
      "48": "48x48.png",
      "128": "128x128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["urlCheck.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["128x128.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
